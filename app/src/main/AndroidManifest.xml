<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="recyclerview.prithvi">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".utils.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.LinearActivity"
            android:label="@string/linear_layout"/>
        <activity android:name=".activities.GridActivity"
            android:label="@string/grid_layout"/>
        <activity android:name=".activities.StaggeredActivity"
            android:label="@string/staggered_layout"/>
    </application>

</manifest>